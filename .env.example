# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# ChromaDB Configuration
CHROMADB_URL=http://localhost:8000

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Camaral AI Assistant

# Feature Flags
ENABLE_LOGGING=true
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# RAG Configuration
RAG_TOP_K=5
RAG_MIN_CONFIDENCE=0.5
# Threshold for detecting out-of-context questions (lower = more strict, only truly unrelated questions)
RAG_OUT_OF_CONTEXT_THRESHOLD=0.25
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50

# LLM Configuration
# Available models: gemini-1.5-flash (fast), gemini-1.5-pro (quality), gemini-2.5-flash
GEMINI_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024
LLM_TOP_P=0.95
